{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "Version": {
      "type": "object",
      "properties": {
        "Tag": {
          "type": "string",
					"pattern": "^[a-zA-Z0-9-_]{1,20}$"
        }
      },
      "required": [
        "Tag"
      ]
    },
    "Application_Name": {
      "type": "string"
    },
    "Application_Short_Name": {
      "type": "string"
    },
    "Additional_App_Infra": {
      "type": "object",
      "properties": {
        "Blob_Storage_Type": {
          "type": "object",
          "properties": {
            "Enabled": {
              "enum": ["True", "true","False","false"]
            },
            "Type": {
              "type": "string"
            }
          },
          "required": [
            "Enabled",
            "Type"
          ]
        },
        "Kafka": {
          "type": "object",
          "properties": {
            "Enabled": {
              "type": "string"
            },
            "Type": {
              "type": "string"
            }
          },
          "required": [
            "Enabled",
            "Type"
          ]
        },
        "Redis": {
          "type": "object",
          "properties": {
            "Enabled": {
              "enum": ["True", "true","False","false"]
            },
            "Size": {
              "type": "string"
            }
          },
          "required": [
            "Enabled",
            "Size"
          ]
        },
        "Client_DB_Integration": {
          "type": "object",
          "properties": {
            "Enabled": {
              "enum": ["True", "true","False","false"]
            }
          },
          "required": [
            "Enabled"
          ]
        },
        "Regional_DB_Integration": {
          "type": "object",
          "properties": {
            "Enabled": {
              "enum": ["True", "true","False","false"]
            }
          },
          "required": [
            "Enabled"
          ]
        },
        "DFID_Integration": {
          "type": "object",
          "properties": {
            "Enabled": {
              "enum": ["True", "true","False","false"]
            }
          },
          "required": [
            "Enabled"
          ]
        }
      },
      "required": [
        "Blob_Storage_Type",
        "Kafka",
        "Redis",
        "Client_DB_Integration",
        "Regional_DB_Integration",
        "DFID_Integration"
      ]
    },
    "BillTo": {
      "type": "string"
    },
    "Dayforce_Product_Domain": {
      "type": "string"
    },
    "Development": {
      "type": "object",
      "properties": {
        "Manager_Name": {
          "type": "string"
        },
        "Team_Email_Distribution": {
          "type": "string",
					"format": "email"
        },
        "Main_Contact_Name": {
          "type": "string"
        },
        "Product_Owner_Email": {
          "type": "string",
					"format": "email"
        },
        "Product_Owner_Name": {
          "type": "string"
        },
        "Feature_Team_Name": {
          "type": "string"
        }
      },
      "required": [
        "Manager_Name",
        "Team_Email_Distribution",
        "Main_Contact_Name",
        "Product_Owner_Email",
        "Product_Owner_Name",
        "Feature_Team_Name"
      ]
    },
    "Environment": {
      "enum": ["dev", "qa", "uat"]
    },
    "Estimated_Go-Live_Date": {
      "type": "string",
			"format": "date"
    },
    "Key": {
      "type": "string",
			"pattern": "^([A-Z-]{2,5}-)(\\d{2})$"
    },
    "Platform": {
      "enum": ["cam", "cie", "cok"]
    },
    "Service_Tier": {
      "enum": ["Tier 0", "Tier 1", "Tier 2", "Tier 9"]
    },
    "Environment_Type": {
      "enum": ["Non Production", "Pre Production", "Production"]
    },
    "Subscription": {
      "type": "string",
			"pattern": "^([a-z]{3})(\\d{3})$"
    },
    "Region": {
      "enum": ["eastus2","centralus","westeurope","northeurope","canadacentral","canadaeast","australiaeast","australiasoutheast"]
    },
    "Cluster_Ref": {
      "type": "string",
			"pattern": "^([a-z]{3})(\\d{2})$"
    }
  },
  "required": [
    "Version",
    "Application_Name",
    "Application_Short_Name",
    "Additional_App_Infra",
    "BillTo",
    "Dayforce_Product_Domain",
    "Development",
    "Environment",
    "Estimated_Go-Live_Date",
    "Key",
    "Platform",
    "Service_Tier",
    "Environment_Type",
    "Subscription",
    "Region",
    "Cluster_Ref"
  ]
}